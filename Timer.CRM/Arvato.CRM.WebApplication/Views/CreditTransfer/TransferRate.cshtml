@{
    ViewBag.Title = "积点转让比例管理";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>积点转让比例管理</h3>
    </div>
    <div class="pull-right">
        <button class="btn" id="btnAdd" onclick="add()">新建转让比例</button>&nbsp;
    </div>
</div>

<div class="row-fluid">
    <div class="mt10 mbox">
        <table class="table" id="dt_rates"></table>
    </div>
</div>

<!--新建/修改转让比例弹窗页-->
<div class="hide">
    <div id="rate_dialog" class="cbox_content form-inline" style="width: 600px;">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmRate" }))
        {
            <input type="hidden" id="hdnRateId" />
            <div class="row-fluid heading">
                <div class="pull-left">
                    <h3 id="h3Rate"></h3>
                </div>
            </div>
            <div class="row-fluid sepH_b">
                <div class="span3 title-left">
                    数据群组<span style="color:red;"> *</span>
                </div>
                <select class="span5" id="drpDataGroup" name="drpDataGroup">
                    @*<option value=""></option>
                    @foreach (var item in ViewBag.DataGroupList)
                    { 
                        <option value="@item.SubDataGroupID">@item.SubDataGroupName</option>
                    }*@
                </select>
                <span class="error-block"></span>
            </div>
            <div class="row-fluid sepH_b">
                <div class="span3 title-left">
                    转让比例(%)<span style="color:red;"> *</span>
                </div>
                <input type="text" id="txtRateValue" name="txtRateValue" class="span5" />
                <span class="error-block"></span>
            </div>
            <div class="row-fluid formSep sepH_b">
                <div class="span3 title-left">
                    备注
                </div>
                <input type="text" id="txtRemark" name="txtRemark" class="span5" />
                <span class="error-block"></span>
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                    <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/CreditTransfer/TransferRate.js")
}