@{
    ViewBag.Title = "车辆车系维护";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>车辆车系维护</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid">
            <div class="form-inline">
                <label>品牌</label>
                <select class="span2" id="drp_VehicleBrand">
                </select>
                <label class="title-left ml10">车系</label>
                <input type="text" class="span2 sepV_a" id="txt_SeriesName" />
                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button class="btn" onclick="goEdit()">新建</button>
            </div>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_SeriesTable">
    </table>
</div>

<!--新建弹窗页-->
<div class="hide">
    <div id="addSeries_dialog" class="cbox_content" style="width: 480px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddVehicleSeries" }))
        {
            <div class="formSep">
                <div class="row-fluid sepH_b">
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            车系编号
                        </div>
                        <input type="text" id="txtSeriesId" name="txtSeriesId" class="span5" disabled="disabled" />
                        <input type="hidden" id="txtDataType" />
                        @*<input type="hidden" id="txtDataGroupId" />*@
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            所属品牌<span style="color: red"> * </span>
                        </div>
                        <select id="addBrand" name="addBrand" class="span5">
                        </select>
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            车系名称<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtSeriesName" name="txtSeriesName" class="span5" />
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            车系代码<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtSeriesCode" name="txtSeriesCode" class="span5" />
                        <span class="error-block"></span>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                            <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/VehicleSeries.js")
}
