@{
    ViewBag.Title = "模型参数配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>模型参数配置</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        @*<div class="well firstShow ">*@
        <div class="row-fluid">
            <div class="form-inline">
                <label class="title-left sepV_a">类型</label>
                <select id="drpOptionType" class="span2 sepV_a">
                </select>
                <label class="ml10">参数名</label>
                <select id="drpOptionText" class="span2">
                </select>
                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button class="btn" id="btnAdd" onclick="goAdd()">新建</button>
            </div>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_OptionTable">
    </table>
</div>

<!--新建弹窗页-->
<div class="hide">
    <div id="addOption_dialog" class="cbox_content" style="min-height: 500px; height: auto; width: 780px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddOption" }))
        {
            <div class="formSep">
                <div class="row-fluid sepH_b">
                    <div class="row-fluid">
                        <div class="span5">
                            <div class="span4 title-left">
                                类型<span style="color: red"> * </span>
                            </div>
                            <select id="selOption" name="selOption" class="span7">
                            </select>
                        </div>
                        <div class="span5">
                            <div class="span4 title-left">
                                参数<span style="color: red"> * </span>
                            </div>
                            <select id="selValue" name="selValue" class="span7">
                            </select>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span5">
                            <div class="span4 title-left">
                                目标参数<span style="color: red"> * </span>
                            </div>
                            <select id="selTargetValue" name="selTargetValue" class="span7">
                            </select>
                        </div>
                        <div class="span5">
                            <div class="span4 title-left">
                                排序序号<span style="color: red"> * </span>
                            </div>
                            <input class="span7" id="txtSort" name="txtSort" type="number" min="0" value="0" />
                        </div>
                        <div class="span1">
                            <i id="splashyAdd" class="splashy-add_small" alg="splashyAdd"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div id="frmDiv"></div> 
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                    <button type="button" id="btnResetCancel" class="btn" disabled="disabled">重置</button>&nbsp;
                    <button type="button" id="btnSave" class="btn btn-info sepV_a" disabled="disabled">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>

<!-- 参数配置Start -->
<!-- 1.数值 2.百分比 3.SELETE -->
<div class=" hide well" >
    <div class="dimension-para-content">
        <div class="row-fluid dimension-para" id="paraType1">
            <div class="span7">
                数值范围&nbsp;&nbsp;
                <input type="text" placeholder="数值" class="span3 txtMinNum" id="txtMinNum" />
                &nbsp;&nbsp;~&nbsp;&nbsp;
                <input type="text" placeholder="数值" style="display: inline" class="span3 txtMaxNum" id="txtMaxNum" />
            </div>
            <div class="span3">
                积分&nbsp;&nbsp;
                <input type="text" placeholder="分" class="span8 txtIntegralV1" id="txtIntegralV1" />
            </div>
            <div class="span2">
                <div class="dimension-para-btns">
                    <i class="splashy-add_small"></i>
                    <i class="splashy-remove_minus_sign_small"></i>
                </div>
            </div>
        </div>
    </div>

</div>
<div class=" hide well" >
    <div class="dimension-para-content">
        <div class="row-fluid dimension-para" id="paraType2">
            <div class="span7">
                百分比范围&nbsp;&nbsp;
                <input type="text" placeholder="百分比" class="span3 txtStartPercentage" id="txtStartPercentage" />%
                &nbsp;&nbsp;~&nbsp;&nbsp;
                <input type="text" placeholder="百分比" style="display: inline" class="span3 txtEndPercentage" id="txtEndPercentage" />%
            </div>
            <div class="span3">
                积分&nbsp;&nbsp;
                <input type="text" placeholder="积分" class="span8 txtIntegralV2" id="txtIntegralV2" />
            </div>
            <div class="span2">
                <div class="dimension-para-btns">
                    <i class="splashy-add_small"></i>
                    <i class="splashy-remove_minus_sign_small"></i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=" hide well" >
    <div class="dimension-para-content">
        <div class="row-fluid dimension-para" id="paraType3">
            <div class="span7">
                下拉框值&nbsp;&nbsp;
                <select id="selOptionCode" name="selOptionCode" class="span5 selOptionCode">
                    <option value="">请选择</option>
                </select>
            </div>
            <div class="span3">
                积分&nbsp;&nbsp;
                <input type="text" placeholder="积分" class="span8 txtIntegralV3" id="txtIntegralV3" />
            </div>
            <div class="span2">
                <div class="dimension-para-btns">
                    <i class="splashy-add_small"></i>
                    <i class="splashy-remove_minus_sign_small"></i>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- 参数配置End -->

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/Option.js")
}
