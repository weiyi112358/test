@{
    ViewBag.Title = "异业券管理";   
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>异业券管理</h3>
    </div>
</div>

<div class="form-inline well">
    <label>批号</label>
    <input type="text" id="txtBatchNo" class="input-medium">
    <label>模板</label>
    <select id="drpSearchTempletID" class="span2">
    </select>
    <button class="btn" id="btnSearch">查询</button>
    <button class="btn" id="btnAddDiscrepantIndustryCoupon">新增异业券</button>
    <button class="btn" id="btnDownloadTemplate">下载模板</button>&nbsp;
</div>

<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dtDiscrepantIndustryCouponList">
    </table>
</div>
<!--新建条目弹窗页-->
<div class="hide">
    <div id="divDiscrepantIndustryCouponDialog" class="cbox_content" style="min-height: 350px; min-width: 500px;">
        <div class="modal-header">
            <h3>批量导入异业优惠券</h3>
        </div>
        <div class="modal-body" style="min-height: 300px; min-width: 480px; overflow-y: auto;">
            <div class="row-fluid">
                <div class="span6">
                    <label>优惠券模板<span class="f_req">*</span></label>
                    <select id="drpTempletID" name="drpTempletID" class="span12">
                    </select>
                </div>
                <form class="form_validation_import">
                    <div class="row-fluid">
                        <div class="span7">
                            <label>文件路径<span id="spanImportStatus" class="f_req"></span> <span class="f_req">*</span></label>
                            <input type="text" id="txtFilePath" readonly="true" name="txtFilePath" class="span12" />
                        </div>
                        <div class="span5" id="container">
                            <label>&nbsp;</label>
                            <button type="button" class="btn btn-info" id="btnPickFiles">选择文件</button>
                            <button type="button" class="btn" id="btnSaveImport">导入数据</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <label>生效日期</label>
                    <input type="text" readonly="readonly" id="txtStartDate" class="span10" />
                    <div class="btn-date-clear"></div>
                </div>
                <div class="span6">
                    <label>失效日期</label>
                    <input type="text" readonly="readonly" id="txtEndDate" class="span10" />
                    <div class="btn-date-clear"></div>
                </div>
            </div>
            <div style="text-align: center">
                <span class="f_req" id="spanError"></span>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-gebo confirm_yes" id="btnUploadDiscrepantIndustryCoupon">保存</a>
            <a href="#" class="btn" id="btnClearUploadDiscrepantIndustryCoupon">清空</a>
        </div>
    </div>
    <div id="divDiscrepantIndustryCouponDetail" class="cbox_content" style="width: 800px; height: 500px">
        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>异业优惠券导入明细</h3>
            </div>
        </div>
        <div class="row-fluid">
            <table class="table" data-provides="rowlink" id="dtDiscrepantIndustryCouponDetail">
            </table>
        </div>
    </div>
</div>
<form id="exportForm" method="post">
    <input type="hidden" id="exprBatchNo" name="exprBatchNo" />
</form>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/plupload/js/plupload.js", "~/Gebo/lib/plupload/js/plupload.gears.js",
        "~/Gebo/lib/plupload/js/plupload.silverlight.js", "~/Gebo/lib/plupload/js/plupload.flash.js",
        "~/Gebo/lib/plupload/js/plupload.browserplus.js", "~/Gebo/lib/plupload/js/plupload.html4.js",
        "~/Gebo/lib/plupload/js/plupload.html5.js")
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/DiscrepantIndustryCoupon.js")
}

