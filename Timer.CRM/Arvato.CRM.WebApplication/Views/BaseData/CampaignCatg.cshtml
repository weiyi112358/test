@{
    ViewBag.Title = "CampaignCatg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>活动类别维护</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid">
            <div class="form-inline">
                <label class="ml10">层级</label>
                <select id="drpLevel" class="span2">
                    <option value="0">一级</option>
                    <option value="1">二级</option>
                </select>

                <label class="title-left sepV_a">所属类别</label>
                <select id="drpPraentCatg" class="span2">
                    <option value="">请选择</option>
                </select>

                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button class="btn" id="btnAdd" onclick="goEdit()">新建</button>
            </div>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_BrandTable">
    </table>
</div>

<!--新建弹窗页-->
<div class="hide">
    <div id="addBrand_dialog" class="cbox_content" style="width: 480px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddBrand" }))
        {
            <div class="formSep">
                <div class="row-fluid sepH_b">
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            类别编号
                        </div>
                        <input type="text" id="txtCatgId" name="txtCatgId" class="span5" disabled="disabled" />

                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            所属层级<span style="color: red"> * </span>
                        </div>
                        <select id="divDrpLevel" name="divDrpLevel" class="span5">
                            <option value="1">一级</option>
                            <option value="2">二级</option>
                        </select>
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            所属父类<span style="color: red"> * </span>
                        </div>
                        <select id="divDrpParent" name="divDrpParent" class="span5">
                        </select>
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            视图后缀<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtViewExt" name="txtViewExt" class="span5" />
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            类别名称<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtCatgName" name="txtCatgName" class="span5" />
                        <span class="error-block"></span>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                            <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/CampaignCatg.js")
}
