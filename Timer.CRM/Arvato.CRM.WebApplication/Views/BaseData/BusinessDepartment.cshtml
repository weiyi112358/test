                            <span class="error-block"></span>
                        </div>*@
                        <div class="span4">
                            <label>所属部门</label>
                            <select class="span12 chzn_a"  id="drpParentDpt">
                                <option value=''>-无-</option>
                            </select>
                            <span class="error-block"></span>
                        </div>
                    </div>
                    <div class="row-fluid">
                        
                    </div>
                </div>
                <div class="clearfix sepV_c">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-info" id="btnSave">保存</button>
                    </div>
                </div>
            </div>
        
        }
    </div>
</div>


@section Scripts{@**@
