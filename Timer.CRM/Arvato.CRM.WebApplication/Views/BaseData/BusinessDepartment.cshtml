                @*<button class="btn">刷新</button>*@
                <button class="btn btn-danger" id="btnDelete">删除</button>
            </p>

            @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "tmpMessageSearch", @class = "input-append" }))
