            }

            <div class="sidebar_tree">
                <div class="dynatree" id="tree_a">
                </div>
            </div>



        </div>
    </div>
    <div class="span9">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmSaveMessage" }))
        {
        
            <div class="sepH_c">
                <div class="formSep">
                    <div class="row-fluid">
                        <div class="span4">
                            <label>业务部门名称</label>
                            
                            <input type="hidden" id="txtHdnId"/>
