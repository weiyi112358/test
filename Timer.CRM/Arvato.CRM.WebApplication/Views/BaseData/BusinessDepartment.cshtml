@{
    ViewBag.Title = "BusinessDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/VGebo/chosen.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>业务部门管理</h3>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">
        <div class="edit-tree">
            <p class="formSep clearfix iconNav_right">
