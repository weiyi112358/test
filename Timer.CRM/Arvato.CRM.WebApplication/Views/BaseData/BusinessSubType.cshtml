@{
    ViewBag.Title = "业务类型管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>业务类型管理</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid">
            <div class="form-inline">
                
                <label>业务类型</label>
                <select class="span2" id="txt_BusinessType">
                </select>

                <label class="title-left sepV_a">子业务类型</label>
                <input type="text" class="span2 sepV_a" id="txt_BusinessSubType" />

                @*<label class="ml10">群组</label>
                <select id="drpStoreClass" class="span2">
                </select>*@
                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button class="btn" id="btnAdd" onclick="goEdit()">新建</button>
            </div>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_BusinessSubType">
    </table>
</div>

<!--新建弹窗页-->
<div class="hide">
    <div id="addSubType_dialog" class="cbox_content" style="width: 480px">
        
        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddSubType" }))
        {
            <div class="formSep">
                <div class="row-fluid sepH_b">

                    <div class="row-fluid sepH_b" style="display:none">
                        <div class="span3 title-left">
                            类型ID<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtTypeId" name="txtTypeId" class="span5" />
                        <span class="error-block"></span>
                    </div>

                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            所属大类<span style="color: red"> * </span>
                        </div>
                        <select id="addType" name="addType" class="span5">
                        </select>
                        <span class="error-block"></span>
                    </div>
                    
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            子类型名称<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtSubTypeName" name="txtSubTypeName" class="span5" />
                        <span class="error-block"></span>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span3 title-left">
                            子类型代码<span style="color: red"> * </span>
                        </div>
                        <input type="text" id="txtSubTypeCode" name="txtSubTypeCode" class="span5" />
                        <span class="error-block"></span>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                    <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/BusinessSubType.js")
}
