@{
    ViewBag.Title = "供应商";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


<div class="row-fluid heading">
    <div class="pull-left">
        <h3>定卡供应商</h3>
    </div>
</div>
<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid">
            <div class="span3">
                <label class="title-left sepV_a">代码</label>
                <input type="text" class="span12 sepV_a" id="txt_Code" />
            </div>
            <div class="span3">
                 <label class="title-left sepV_a">名称</label>
                <input type="text" class="span12 sepV_a" id="txt_Name" />
            </div>
            <div class="q_btn">
                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button class="btn" id="btnAdd" onclick="goEdit()">新建</button>
            </div>

        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_SupplierTable">
    </table>
</div>

<!--新建弹窗页-->
<div class="hide">
    <div id="addBrand_dialog" class="cbox_content" style="width: 700px; overflow-y: auto; height: 450px;">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddSupplier" }))
        {
            <input type="hidden" id="supplierid" />
            <div class="formSep">
                <div class="row-fluid sepH_b">
                    <div class="row-fluid">

                        <div class="span6">
                            <div class="span3">
                                代码<span style="color: red"> * </span>
                            </div>
                            <input type="text" id="txtCode"  name="txtCode" class="span7" />
                            <span class="error-block"></span>
                        </div>

                        <div class="span6">
                            <div class="span3">
                                名称<span style="color: red"> * </span>
                            </div>
                            <input type="text" id="txtName" maxlength="100" name="txtName" class="span7" />
                            <span class="error-block"></span>
                        </div>
                    </div>
                    <div class="row-fluid">
                        
                        <div class="span6">
                            <div class="span3">
                                电话<span style="color: red">  </span>
                            </div>
                            <input type="text" id="txtPhone" maxlength="100" name="txtPhone" class="span7" />
                            <span class="error-block"></span>
                        </div>
                        <div class="span6">
                            <div class="span3">
                                传真<span style="color: red"> </span>
                            </div>
                            <input type="text" id="txtFax" maxlength="30" name="txtFax" class="span7" />
                            <span class="error-block"></span>
                        </div>

                    </div>

                    <div class="row-fluid">
                        
                        <div class="span6">
                            <div class="span3">
                                所属省份<span style="color: red">  </span>
                            </div>
                            <select id="txtProvince" name="txtProvince" class="span7">
                                <option value="">请选择</option>
                                @foreach (var chan in ViewBag.province)
                                {
                                    <option value="@chan.OptionValue">@chan.OptionText</option>
                                }
                            </select>
                            <span class="error-block"></span>
                        </div>

                        <div class="span6">
                            <div class="span3">
                                市<span style="color: red">  </span>
                            </div>
                            <select id="txtCity" name="txtCity" class="span7">
                                <option value="">请选择</option>
                                
                            </select>
                            <span class="error-block"></span>
                        </div>
                    </div>
                    <div class="row-fluid sepH_b">
                        <div class="span6">
                            <div class="span3">
                                联系人<span style="color: red"></span>
                            </div>
                            <input type="text" id="txtContactPerson" name="txtContactPerson" maxlength="13" class="span7" />
                            <span class="error-block"></span>
                        </div>
                    </div>                                      
                </div>
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                            <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/Supplier.js")
}
