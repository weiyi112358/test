@{
    ViewBag.Title = "CampaignAttribute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>活动属性维护</h3>
    </div>
</div>

<div class="row-fluid">
    <div class="form-inline well">
        <div class="span3">
            <label class="title-left sepV_a">字段描述</label>
            <input type="text" class="input-medium span12" id="txtFieldDesc">
        </div>
        <div class="span3">
            <label class="ml10 title-left sepV_a">字段别名</label>
            <input type="text" class="input-medium span12" id="txtFieldAlias">
        </div>
        <div class="span3">
            <label class="ml10 title-left sepV_a">字段类型</label>
            <select class="span12 sepV_b" id="drpFieldType">
                @*<option value="">字符串(20)</option>
                <option value="">字符串(100)</option>
                <option value="">整型</option>
                <option value="">布尔型</option>
                <option value="">日期型(长)</option>
                <option value="">日期型(短)</option>
                <option value="">十进制(2位小数)</option>
                <option value="">十进制(4位小数)</option>*@
            </select>
        </div>
        <div class="q_btn">
            <button class="btn" id="btnSearch">查询</button>
            <button class="btn" id="btnClear">清空</button>
            <button class="btn" onclick="goEdit('')">新建</button>
        </div>
        
    </div>
</div>


<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dt_attribute"></table>
</div>

<div class="hide">
    <div id="table_editattribute" class="cbox_content popComMedium">
        <div class="modal-header">
            <h3>属性编辑</h3>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmEditAttribute" }))
        {
            <div class="modal-body">
                <div class="formSep">
                    <div class="form-inline sepH_b ">
                        <div class="row-fluid sepH_b">
                            <div class="span3">
                                <label class="ml10">字段描述</label>
                                <input type="text" class="span11" id="txt_fielddesc" name="txt_fielddesc">
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">字段别名</label>
                                <input type="text" class="span11" id="txt_fieldalias" name="txt_fieldalias">
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">字段类型</label>
                                <select class="span11" id="drp_fieldtype" name="drp_fieldtype">
                                    @*<option>字符串(20)</option>
                                <option>字符串(100)</option>
                                <option>整型</option>
                                <option>布尔型</option>
                                <option>日期型(长)</option>
                                <option>日期型(短)</option>
                                <option>十进制(2位小数)</option>
                                <option>十进制(4位小数)</option>*@
                                </select>
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">数据源</label>
                                <input type="text" class="span11" id="txt_datasource" name="txt_datasource" />
                                <span class="error-block"></span>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3">
                                <label class="ml10">数据源类型</label>
                                <input type="text" class="span11" id="txt_datasourcetype" name="txt_datasourcetype" />
                                @*<select class="span11" id="drp_datasourcetype">
                        </select>*@
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">细分可用</label><br />
                                <input type="checkbox" name="chbEnable" id="ckb_subdivision" />
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">忠诚度可用</label><br />
                                <input type="checkbox" name="chbEnable" id="ckb_loyal" />
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">沟通模板可用</label><br />
                                @*<input type="text" class="span11" id="txt_aliaskey" name="txt_aliaskey">*@
                                @*<select class="span11" id="txt_aliaskey" name="txt_aliaskey">
                        </select>*@
                                <input type="checkbox" name="chbEnable" id="ckb_tmpcommu" />
                                <span class="error-block"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row-fluid">
                            <div class="span3">
                                <label class="ml10">控件类型</label>
                                <select class="span11" id="drp_controltype" name="drp_controltype">
                                    <option value="input">文本框</option>
                                    <option value="date">日期</option>
                                    <option value="datetime">日期区间</option>
                                    <option value="select">单选下拉框</option>
                                    <option value="selesearch">可查询下拉框</option>
                                </select>
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">关系</label>
                                <select class="span11" id="drp_relationship" name="drp_relationship">
                                    <option value="campaign">活动</option>
                                </select>
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">关系关键字</label>
                                <select class="span11" id="drp_catgkey" name="drp_catgkey">
                                    @*<option value='-1'>-无-</option>*@
                                </select>
                                <span class="error-block"></span>
                            </div>
                            <div class="span3">
                                <label class="ml10">关系子关键字</label>
                                <select class="span11" id="drp_catgsubkey" name="drp_catgsubkey">
                                    @*<option value='-1'>-无-</option>*@
                                </select>
                                <span class="error-block"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row-fluid">
                            <div class="span12">
                                <label class="ml10">正则匹配表达式</label>
                                <textarea rows="1" class="span12" id="txt_reg" name="txt_reg"></textarea>
                                <span class="error-block"></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-info">保存</button>
                <button type="button" class="btn" id="btn_clear">清空</button>
                <button id="" type="button" class="btn" onclick="$.colorbox.close();">取消</button>
            </div>

        }
    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BaseData/CampaignAttribute.js")
}
