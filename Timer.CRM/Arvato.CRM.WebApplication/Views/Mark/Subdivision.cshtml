<div class="well">
    <div class="row-fluid">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "activitySubdivision" }))
        {
            <div class="span2">
                <label>会员卡号</label>
                <input type="text" id="CardNo" name="CardNo" class="span12">
            </div>
            <div class="span2">
                <label>会员姓名</label>
                <input type="text" id="Name" name="Name" class="span12">
            </div>
            <div class="span2">
                <label>细分名称</label>
                <select class="span12" name="SubdivisionId" id="SubdivisionId">
                    <option value="">请选择</option>
                    @foreach (var subdiv in ViewBag.Subdivisions)
                    {
                        <option value="@subdiv.SubdivisionID">@subdiv.SubdivisionName</option>
                    }
                </select>
            </div>
            <div class="span4">
                <label>活动实例</label>
                <select class="span12" name="Instance" id="Instance">
                    @foreach (var ins in ViewBag.Instances)
                    {
                        <option value="@ins.ActivityInstanceID">@string.Format("{0:yyyy-MM-dd}~{1:yyyy-MM-dd}", ins.AddedDate, ins.ModifiedDate) </option>
                    }
                </select>
            </div>
            <div class="span2">
                <label>&nbsp;</label>
                <button class="btn" type="submit">查询</button>
                <button class="btn" type="button" id="btnExport">导出</button>
            </div>
        }
    </div>
</div>
<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dtClientFollow"></table>
</div>