@model Activity
@using Arvato.CRM.Utility.WorkFlow;
<div id="mask" style="position:absolute;z-index:100;background-color:#ccc;opacity:0.4;top:160px;display:none;"></div>
@using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmWorkFlow" }))
{
    <div class="row-fluid formSep">
       
        <div class="span2">
            <div class="node-container sepH_c">
                <ul class="node_list" id="ulTemplate"></ul>
            </div>
            <div class="node-container">
                <div class="row-fluid">
                    <div class="node_list">
                        <p class="list_heading">
                            <b style="float:left;">配置会员细分</b>
                            <a href="javascript:;" onclick="goSubd()" style="margin-left:5px;" >
                                <i class="splashy-add_small"></i>
                            </a>
                            <a href="javascript:showSelSubd();" style="margin-left:5px;">
                                <i class="icon-search"></i>
                            </a>
                        </p>
                        @*<input type="text" id="subdivisionWord" class="customInput" />*@
                    </div>
                    <div class="scrollH150" id="divSubd">
                        @if (ViewBag.Subdivision != null)
                        {
                            foreach (var sub in ViewBag.Subdivision)
                            {
                            @*<label class="checkbox">
                            </label>
                                <input type="checkbox" value="@sub.SubdivisionID"
                                       @(sub.Checked == "true" ? "checked" : "")
                                       name="subdivisionId">*@
                                if (sub.Checked == "true")
                                {
                                    <input type="text" class="span12" value="@sub.SubdivisionName" itemid="@sub.SubdivisionID" />
                                }

                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="span5">
            <div class="w-box wl_panel">
                <ul id="holder"></ul>
            </div>
        </div>
        <div class="span5">
            <div class="node-container sepH_c">
                <div class="row-fluid">
                    <div class="node_list">
                        <p class="list_heading clearfix"><a class="pull-right" href="javascript:void(0);" id="zoomIn"><i class="splashy-zoom_in"></i>缩略图</a></p>
                    </div>
                </div>
                <div class="wl_tree">
                    <div id="tree_workflow"></div>
                </div>
            </div>
            <div class="node-container">
                <div class="row-fluid">
                    <div class="node_list">
                        <p class="list_heading">参数配置</p>
                    </div>
                    <div class="span12" id="nodesetting"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="pull-right">
            <input type="submit" class="btn btn-info sepV_a btnSave" value="保存" />
            @*<input type="button" class="btn sepV_c btnBack" value="返回" />*@
        </div>
    </div>  
}