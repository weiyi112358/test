<div class="row-fluid">
    <div class="mt10 mbox">
        <div id="dt_dataGroup_wrapper" class="dataTables_wrapper form-inline no-footer">
            <div class="dt-top-row"></div>
            <div id="dt_dataGroup_processing" class="dataTables_processing" style="display: none;">数据加载中……</div>
            <div class="dt-wrapper">
                <table class="table dataTable no-footer" id="dt_dataGroup" role="grid" aria-describedby="dt_dataGroup_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 5%;"><input class="input_c" type="checkbox" value="" /></th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 10%;" aria-label="单号">单号</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 10%;" aria-label="执行状态">执行状态</th>
                            <th class="sorting_disabled" tabindex="0" rowspan="1" colspan="1" style="width: 10%;" aria-label="模板">模板</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 11%;" aria-label="功能摘要">功能摘要</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 10%;" aria-label="状态">状态</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 12%;" aria-label="促销日期">促销日期</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 10%;" aria-label="说明">说明</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 10%;" aria-label="创建信息">创建信息</th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 12%;" aria-label="最后修改信息">最后修改信息</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr role="row" class="odd">
                            <td class="sorting_1"><input class="input_c" type="checkbox" value="" /></td>
                            <td>1</td>
                            <td>2</td>
                            <td>3</td>
                            <td>4</td>
                            <td>5</td>
                            <td>6</td>
                            <td>7</td>
                            <td>6</td>
                            <td>7</td>
                        </tr>
                        <tr role="row" class="even">
                            <td class="sorting_1"><input class="input_c" type="checkbox" value="" /></td>
                            <td>234</td>
                            <td>2</td>
                            <td>3</td>
                            <td>4</td>
                            <td>5</td>
                            <td>6</td>
                            <td>7</td>
                            <td>6</td>
                            <td>7</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="dt-row dt-bottom-row mt10">
                <div class="pull-left">
                    <div class="dataTables_info" id="dt_dataGroup_info" role="status" aria-live="polite">从 1 到 2 条，共 2 条记录</div>
                </div>
                <div class="pull-right">
                    <div class="dataTables_paginate paging_bootstrap_alt pagination" id="dt_dataGroup_paginate">
                        <ul>
                            <li class="first disabled"><a href="#">&lt;&lt; 首页</a></li>
                            <li class="prev disabled"><a href="#">&lt;  上一页 </a></li>
                            <li class="active"><a href="#">1</a></li>
