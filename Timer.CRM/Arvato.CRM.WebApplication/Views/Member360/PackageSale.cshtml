@{
    ViewBag.Title = "套餐销售";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/VGebo/chosen.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>套餐销售</h3>
    </div>
    @*<div class="pull-right">
        <button class="btn" onclick="window.location = '/Member360/PackageSalePrint'">套餐销售历史</button>&nbsp;
    </div>*@
</div>

<div class="well">
    <div class="row-fluid">
        <div class="span2">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtCardNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span2">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span2">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>
        <div class="span2">
            <label>车牌号</label>
            <input type="text" class="span12" id="txtVehicle" value="" />
            <span class="error-block"></span>
        </div>
        @*<div class="span2">
            <label>VIN码</label>
            <input type="text" class="span12" id="txtVIN" value="" />
        </div>*@
        <div class="span2">
            <label>&nbsp;</label>
            <button type="button" id="btnSearch" class="btn">查询</button>
        </div>
    </div>
</div>

<div class="hide">
    <div id="table_Member" class="cbox_content" style="width: 560px; height: 380px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>会员信息</h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableMemberInfo">
                </table>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdnMemberId" />
<input type="hidden" id="hdnUserName" value="@ViewBag.UserName"/>
<input type="hidden" id="hdnStoreName" value="@ViewBag.StoreName"/>
<input type="hidden" id="hdnPid" />
<input type="hidden" id="hdnPrinter" value="@ViewBag.Printer"/>
<div class="row-fluid memInfoBlock">
    <h2 class="pull-left memName" id="spnName">
        @*<input type="hidden" id="hdnMemberId" />*@
    </h2>

    <div class="pull-left memBasic">
        <span id="spnGender">&nbsp;&nbsp;</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b id="spnLevel"></b>
    </div>
    <div class="span8 memInfoList">
        <div class="clearfix">
            <p class="sepH_a"><span class="muted sepV_b">会员卡号</span><strong id="spnCardNo"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">会员卡状态</span><strong id="spnCardStat"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">手机号码</span><strong id="spnMobile"></strong></p>
        </div>
        @*<div class="clearfix">
            <p class="sepH_a"><span class="muted sepV_b">待定</span><strong id="stgValidValue1"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">待定</span><strong id="stgValidValue2"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">待定</span><strong id="stgValidValue3"></strong></p>
        </div>*@
    </div>
</div>

<br />
<div class="sepH_c row-fluid">
    <p class="f_legend">套餐列表</p>
    <div class="well">
        <div class="row-fluid">
            <div class="span2">
                <label>套餐名称</label>
                <input type="text" class="span11" id="txtPackageName" />
            </div>
            <div class="span2">
                <label>&nbsp</label>
                <button id="btnSerachPackage" class="btn">查询</button>
            </div>
            <div class="span2">
                <label>&nbsp</label>
                <button id="btnCompute" class="btn pull-right btn-info">计算总价</button>
            </div>
            <div class="span2">
                <label>&nbsp</label>
                <input type="text" class="span11" id="txtTotal" />
            </div>
            <div class="span4">
                <label>&nbsp</label>
                <button id="btnEnter" class="btn btn-info">确定购买</button>
                <button id="btnPrint" class="btn btn-info">打印</button>
            </div>
        </div>
        @*<div class="row-fluid">
            <div class="span8">
                <label>限制门店</label>
                <select class="chzn_store span12" multiple data-placeholder="请选择..." id="drpLimitStore">
                </select>
            </div>
            
        </div>*@
    </div>
    <table class="table" data-provides="rowlink" id="dt_package">
    </table>

    @*<div class="pull-right  sepH_a">
        <button class="pull-right btn btn-info">确定购买</button>
    </div>*@

</div>

<br />
<div class="sepH_c row-fluid">
    <p class="f_legend">套餐明细</p>
    <table class="table" data-provides="rowlink" id="dtPackageDetail">
    </table>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Gebo/lib/chosen/chosen.jquery.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/PackageSale.js")
}
