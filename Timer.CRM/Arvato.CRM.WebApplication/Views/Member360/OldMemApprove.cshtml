@{
    ViewBag.Title = "老会员审批";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/IXCSS/Common.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>老会员审批</h3>
    </div>
</div>
<div class="well">
    <div class="row-fluid">
        <div class="span3">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtCardNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span3">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>
        <div class="span3">
            <label>审批状态</label>
            <select id="txtStatus" name="txtStatus" class="span12">
                <option value="">全部</option>
                <option value="1">已审批</option>
                <option value="0" selected="selected">未审批</option>

            </select>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <label>开始时间</label>
            <input type="text" class="span12" id="txtStartDate" readonly="readonly" value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        <div class="span3">
            <label>结束时间</label>
            <input type="text" class="span12" id="txtEndDate" readonly="readonly" value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        <div class="span3">
            <label>&nbsp;</label>
            <button type="button" id="btnSearch" class="btn">查询</button>
        </div>

    </div>
</div>

<input type="hidden" id="txtHdnMemMid" />
<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="tableMemberInfo">
    </table>
</div>
<input type="hidden" id="txtHdnMid" />

<div class="hide">
    <div id="table_Vehcile" class="cbox_content" style="width: 900px;height:500px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>车辆信息</h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableVehcileInfo"></table>
            </div>
        </div>
    </div>
</div>

<!--新建条目弹窗页-->
<div class="hide">
    <div id="addStore_dialog" class="cbox_content" style="width: 500px;">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>老会员审核页面</h3>
            </div>
        </div>
        
            <div class="formSep">
                <div class="row-fluid">
                    <div class="span3 title-left">
                        会员卡号
                    </div>
                    <input type="text" id="txtMemNo" name="txtMemNo" disabled="disabled" class="span5" />
                    <span class="error-block"></span>
                </div>
                <div class="row-fluid">
                    <div class="span3 title-left">
                        会员姓名
                    </div>
                    <input type="text" id="txtMemName" name="txtMemName" disabled="disabled" class="span5" />
                    <span class="error-block"></span>
                </div>
                <div class="row-fluid">
                    <div class="span3 title-left">
                        累计充值金额<span class="f_req">*</span>
                    </div>
                    <input type="text" id="txtTotalGold" name="txtTotalGold"  onkeyup="value=value.replace(/[^\d.]/g,'')" class="span5" />
                    @*<input type="text" id="txtHdnTotal" name="txtHdnTotal"  disabled="disabled" style="width:60px;" />*@
                    <span class="error-block"></span>
                </div>

                <div class="row-fluid">
                    <div class="span3 title-left">
                        未开票金额<span class="f_req">*</span>
                    </div>
                    <input type="text" id="txtNoInvoiceGold" name="txtNoInvoiceGold" onkeyup="value=value.replace(/[^\d.]/g,'')"  class="span5" />
                    @*<input type="text" id="txtHdnNoInvoice" name="txtHdnNoInvoice"  disabled="disabled"  style="width:60px;"/>*@
                    <span class="error-block"></span>
                </div>
                <div class="row-fluid">
                    <div class="span3 title-left">
                        剩余本金金币<span class="f_req">*</span>
                    </div>
                    <input type="text" id="txtRechargeGold" name="txtRechargeGold" onkeyup="value=value.replace(/[^\d.]/g,'')"  class="span5" />
                    @*<input type="text" id="txtHdnRecharge" name="txtHdnRecharge"  disabled="disabled"  style="width:60px;" />*@
                    <span class="error-block"></span>
                </div>
                <div class="row-fluid">
                    <div class="span3 title-left">
                        剩余赠送金币<span class="f_req">*</span>
                    </div>
                    <input type="text" id="txtSendGold" name="txtSendGold" onkeyup="value=value.replace(/[^\d.]/g,'')"  class="span5" />
                    @*<input type="text" id="txtHdnSend" name="txtHdnSend"  disabled="disabled"  style="width:60px;"/>*@
                    <span class="error-block"></span>
                </div>
                
            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                    <button type="button" id="btnAddSave" class="btn btn-info sepV_a">审核提交</button>&nbsp;
                </div>
            </div>
        
    </div>
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")

    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/OldMemApprove.js")
}

