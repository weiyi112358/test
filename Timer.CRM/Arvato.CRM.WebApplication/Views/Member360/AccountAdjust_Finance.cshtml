@{
    ViewBag.Title = "AccountAdjust_Finance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/IXCSS/Common.css")
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>账户调整财务审核</h3>
    </div>
</div>
<div class="well">
    <div class="row-fluid">
        <div class="span3">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtCardNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span3">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>

        <div class="span3">
            <label>审批状态</label>
            <select id="txtStatus" name="txtStatus" class="span12">
                <option value="">全部</option>
                <option value="2">已审批</option>
                <option value="1" selected="selected">未审批</option>

            </select>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <label>开始时间</label>
            <input type="text" class="span12" id="txtStartDate" readonly="readonly" value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        <div class="span3">
            <label>结束时间</label>
            <input type="text" class="span12" id="txtEndDate" readonly="readonly" value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        <div class="span3">
            <label>&nbsp;</label>
            <button type="button" id="btnSearch" class="btn">查询</button>
        </div>

    </div>
</div>

<input type="hidden" id="txtHdnMid" />
<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dt_StoreData">
    </table>
</div>
<div class="hide">
    <div id="table_Vehcile" class="cbox_content" style="width: 900px;height:500px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>车辆信息</h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableVehcileInfo"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")

    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/AccountAdjust_Finance.js")
}
