@{
    ViewBag.Title = "金币购买财务审核";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/IXCSS/Common.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>金币购买财务审核</h3>
    </div>
    @*<div class="pull-right">
        <button class="btn" onclick="window.location = '/Member360/Invoice'">开票页面</button>&nbsp;
    </div>*@
</div>
<div class="well">
    <div class="row-fluid">
        <div class="span3">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtCardNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span3">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>

        <div class="span3">
            <label>审批状态</label>
            <select id="txtStatus" name="txtStatus" class="span12">
                <option value="">全部</option>
                <option value="2">已审批</option>
                <option value="1" selected="selected">未审批</option>

            </select>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <label>储值开始时间</label>
            <input type="text" class="span12" id="txtStartDate" readonly="readonly"  value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        <div class="span3">
            <label>储值结束时间</label>
            <input type="text" class="span12" id="txtEndDate" readonly="readonly"  value="" placeholder="请选择日期" /><div class='btn-date-clear'></div>
        </div>

        @*<div class="span2">
            <label>车牌号</label>
            <input type="text" class="span12" id="txtVehicle" value="" />
            <span class="error-block"></span>
        </div>*@
        @*<div class="span2">
            <label>VIN码</label>
            <input type="text" class="span12" id="txtVIN" value="" />
        </div>*@
        <div class="span3">
            <label>&nbsp;</label>
            <button type="button" id="btnSearch" class="btn">查询</button>
        </div>

    </div>
</div>

<div class="hide">
    <div id="table_Member" class="cbox_content" style="width: 560px; height: 380px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>会员信息</h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableMemberInfo">
                </table>
            </div>
        </div>
    </div>
</div>

<div class="hide">
    <div id="table_Edit" class="cbox_content" style="width: 560px; height: 380px">
        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>编辑订单    </h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="well memInfoBlock hide">
                <div class="row-fluid">
                    <div class="span5">
                        <label>储值等级</label>
                        <select class="span12" id="drpStoreLevel2">
                            <option value="">请选择</option>
                            @foreach (var chan in ViewBag.StoreValueLevel)
                            {
                                <option value="@chan.OptionValue">@chan.OptionText</option>
                            }
                        </select>
                    </div>
                    <div id="divCash2" class="span5 hide">
                        <label>充值金额</label>
                        <input type="text" class="span12" id="txtValue2" maxlength="12" onkeyup="value=value.replace(/[^\d.]/g,'')" />
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span5">
                        <label>储值时间</label>
                        <input type="text" class="span12" id="txtDate2" placeholder="有效起始日期">
                    </div>
                    <div class="span5">
                        <label>开票金额</label>
                        <input type="text" class="span12" id="txtInvoice" onkeyup="value=value.replace(/[^\d.]/g,'')">
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span5">
                        <label>门店</label>
                        <select id="drpStore2" class="span12" name="drpStore2"></select>
                    </div>
                    <div class="span5">
                        <label>支付方式</label>
                        <select id="dropPayType" class="span12" name="dropPayType"></select>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span5">
                        <label>仅限本门店使用</label>
                        <input type ="checkbox" id="isStore"/>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span5">
                        <label></label>
                        <br />
                        <button class="btn" id="btnSubmit2">提交</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="txtHdnMid" />
<input type="hidden" id="hdnTradeID" />
<input type="hidden" id="hdnMemberId" />
<input type="hidden" id="hdnUserName" value="@ViewBag.UserName"/>
<input type="hidden" id="hdnStoreName" value="@ViewBag.StoreName"/>
<input type="hidden" id="hdnPrinter" value="@ViewBag.Printer"/>

<div class="hide">
    <div id="table_Vehcile" class="cbox_content" style="width: 900px;height:500px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>车辆信息</h3>
            </div>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableVehcileInfo"></table>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dt_StoreData">
    </table>
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")

    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/StoreValue_Finance.js")
}
