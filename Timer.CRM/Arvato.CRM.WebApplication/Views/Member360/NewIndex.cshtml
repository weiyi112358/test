@{
    ViewBag.Title = "NewIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>入会列表</h3>
    </div>
</div>

<div class="well">
    <div class="row-fluid">
        <div class="span3">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtMemNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span3">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>
        <div class="span3">
            <label>&nbsp;</label>
            <div class="pull-right">
                <button class="btn" id="btnSearch" type="button">查询</button>
                <button class="btn" id="btnAdd" type="button">新建入会</button>
            </div>
        </div>
    </div>
    @*<div class="row-fluid">
        
    </div>*@
</div>
<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dtMember360">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<input type="hidden" id="hdnMemberId" />
<!--新建弹窗页-->
<div class="hide">
    <div id="addItem_dialog" class="cbox_content" style="width: 480px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>新建/编辑</h3>
            </div>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmAddMem" }))
        {
            <div class="formSep">
                <div class="row-fluid sepH_b">
                    <div class="span6 title-left">
                        车主姓名<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                    <div class="span6 title-left">
                        手机<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                </div>
                <div class="row-fluid sepH_b">
                    <div class="span6 title-left">
                        车牌<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                    <div class="span6 title-left">
                        车架号<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                </div>
                <div class="row-fluid sepH_b">
                    <div class="span6 title-left">
                        登记日期<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                    <div class="span6 title-left">
                        进厂里程<span style="color: red"> * </span>
                        <input type="text" name="" class="span8" id="" />
                        <span class="error-block"></span>
                    </div>
                </div>
                <div class="row-fluid sepH_b">
                    <div class="span6 title-left">
                        品&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;牌<span style="color: red"> * </span>
                        <select id="addBrand" name="addBrand" class="span8">
                        </select>
                        <span class="error-block"></span>
                    </div>
                    <div class="span6 title-left">
                        车&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;系<span style="color: red"> * </span>
                        <select id="addLevel" name="addLevel" class="span8">
                            <option value=''>-车系-</option>
                        </select>
                        <span class="error-block"></span>
                    </div>
                </div>
                <div class="row-fluid sepH_b">

                    <div class="span6 title-left">
                        车&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;型<span style="color: red"> * </span>
                        <select id="addSeries" name="addSeries" class="span8">
                            <option value=''>-车型-</option>
                        </select>
                        <span class="error-block"></span>
                    </div>
                </div>


            </div>
            <div class="row-fluid">
                <div class="pull-right">
                    <button type="button" id="btnAddCancel" class="btn" onclick="$.colorbox.close();">取消</button>&nbsp;
                            <button type="submit" id="btnAddSave" class="btn btn-info sepV_a">保存</button>&nbsp;
                </div>
            </div>
        }
    </div>
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/NewIndex.js")
}
