@{
    ViewBag.Title = "优惠券添加";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/VGebo/chosen.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>优惠券添加</h3>
    </div>
</div>
<div class="well">
    <div class="row-fluid">
        <div class="span2">
            <label>会员卡号</label>
            <input type="text" class="span12" id="txtCardNo" value="" />
            <span class="help-block"></span>
        </div>
        <div class="span2">
            <label>姓名</label>
            <input type="text" class="span12" id="txtName" value="" />
            <span class="error-block"></span>
        </div>
        <div class="span2">
            <label>手机号</label>
            <input type="text" class="span12" id="txtMobile" value="" />
        </div>
        <div class="span2">
            <label>车牌号</label>
            <input type="text" class="span12" id="txtVehicle" value="" />
            <span class="error-block"></span>
        </div>
        @*<div class="span2">
            <label>VIN码</label>
            <input type="text" class="span12" id="txtVIN" value="" />
        </div>*@
        <div class="span2">
            <label>&nbsp;</label>
            <button type="button" id="btnSearch" class="btn">查询</button>
        </div>
    </div>
</div>

<div class="hide">
    <div id="table_Member" class="cbox_content" style="width: 560px; height: 380px">

        <div class="row-fluid heading">
            <div class="pull-left">
                <h3>会员信息</h3>
            </div>
        </div>

        <div class="modal-body">
            <div class="row-fluid">
                <table class="table" data-provides="rowlink" id="tableMemberInfo">
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid memInfoBlock">
    <h2 class="pull-left memName" id="spnName">
        <input type="hidden" id="hdMemberId" />
    </h2>

    <div class="pull-left memBasic">
        <span id="spnGender">&nbsp;&nbsp;</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b id="spnLevel"></b>
    </div>
    <div class="span8 memInfoList">
        <div class="clearfix">
            <p class="sepH_a"><span class="muted sepV_b">会员卡号</span><strong id="spnCardNo"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">会员卡状态</span><strong id="spnCardStat"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">手机号码</span><strong id="spnMobile"></strong></p>
        </div>
        @*<div class="clearfix">
            <p class="sepH_a"><span class="muted sepV_b">可用现金</span><strong id="stgValidValue1"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">可用积点</span><strong id="stgValidValue2"></strong></p>
            <p class="sepH_a"><span class="muted sepV_b">可用积分</span><strong id="stgValidValue3"></strong></p>
        </div>*@
    </div>
</div>

<div class="row-fluid heading mt20 sepH_b">
    <div class="pull-left">
        <h3>优惠券添加</h3>
    </div>
</div>

<div class="well">
    <div class="row-fluid">
        <div class="span2">
            <label>优惠券名称</label>
            <input type="text" class="span12" id="txtCouponName" />
            <span class="help-block"></span>
        </div>
        <div class="span2">
            <label>&nbsp;</label>
            <button type="button" id="btnCouponSearch" class="btn">查询</button>
        </div>
        <div class="span2" style="display: none">
            <label>优惠券代码</label>
            <input type="text" class="span12" id="txtCouponCode" />
            <span class="help-block"></span>
        </div>
        <div class="span2">
            <label>优惠券模板编号</label>
            <input type="text" class="span12" id="txtTempleID" />
            <span class="help-block"></span>
        </div>
        <div class="span4">
            <label>添加原因：</label>
            <textarea name="txtReason" id="txtReason" cols="10" maxlength="100" rows="3" class="span9" placeholder="请输入原因"></textarea>
        </div>
        <div class="span2">
            <label>&nbsp;</label>
            <button type="button" id="addCoupon" class="btn">添加</button>
        </div>
    </div>
</div>

<div class="row-fluid">
    <table class="table" data-provides="rowlink" id="dt_CouponData">
    </table>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Gebo/lib/chosen/chosen.jquery.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Member360/CouponAdd.js", "~/Scripts/Framework/linq.min.js")
}


