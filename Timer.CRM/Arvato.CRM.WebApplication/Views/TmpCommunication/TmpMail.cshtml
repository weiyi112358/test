@{
    ViewBag.Title = "邮件模板管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>邮件模板管理</h3>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">
        <div class="edit-tree">
            <p class="formSep clearfix iconNav_right">
                <button class="btn" id="btnClear">新建</button>
                @* <button class="btn">刷新</button>*@
                <button class="btn btn-danger" id="btnDelete">删除</button>
            </p>

            @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "tmpMailSearch", @class = "input-append" }))
            {
                <input autocomplete="off" name="query" id="key" class="search_query input-medium" size="16" type="text" placeholder="搜索..." />
                <button type="submit" class="btn"><i class="icon-search"></i></button>
            }

            <div class="sidebar_tree">
                <div class="dynatree" id="tree_a">
                </div>
            </div>
        </div>
    </div>

    <div class="span9">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmSaveMail" }))
        {
    
            <div class="sepH_c">
                <div class="formSep">
                    <div class="row-fluid">
                        <div class="span4">
                            <label>模板编号</label>
                            <input type="text" name="" class="span12" id="txtTmpCode" disabled="disabled" />
                            <span class="error-block"></span>
                        </div>
                        <div class="span4">
                            <label>模版名称 <span class="f_req">*</span></label>
                            <input type="text" name="txtTmpName" id="txtTmpName" class="span12" />
                            <span class="error-block"></span>
                        </div>
                        <div class="span2">
                            <label><span class="error_placement">状态</span></label>
                            <label class="checkbox inline">
                                <input type="checkbox" name="enable" id="enable" checked="checked">
                                启用
                            </label>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span8">
                            <label>邮件主题 <span class="f_req">*</span></label>
                            <input type="text" name="txtTitle" class="span12" id="txtTitle" />
                            <span class="error-block"></span>
                        </div>
                        <div class="span4">
                            <label>模板类型</label>
                            <select class="span12" id="drpTmpCatg">
                            </select>
                            <span class="error-block"></span>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <label>模版内容 <span class="f_req">*</span></label>
                            <textarea name="txtTmpContent" id="txtTmpContent" class="span12" cols="20" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <label>个性化元素列表</label>
                            <select multiple="multiple" class="singleselect span12" id="slWildcardList">
                            </select>
                            <span class="error-block"></span>
                        </div>
                        <div class="span6">
                            <label>备注</label>
                            <textarea name="txtRemark" class="span12" rows="4" id="txtRemark"></textarea>
                            <span class="error-block"></span>
                        </div>
                    </div>
                </div>
                <div class="row-fuid pull-right">
                    <button type="submit" class="btn btn-info sepV_c" id="btnSave">保存</button>
                </div>

            </div>
    
        }
    </div>
</div>


@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js", "~/Gebo/lib/tiny_mce/jquery.tinymce.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/TmpCommunication/TmpMail.js")
}
