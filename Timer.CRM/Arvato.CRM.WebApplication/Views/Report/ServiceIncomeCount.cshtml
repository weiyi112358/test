@{
    ViewBag.Title = "ServiceIncomeCount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid heading">
    <div class="pull-left">
        <h3>台次维修收入汇总</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid">
            <div class="form-inline">
                <label>手机号</label>
                <input type="text" id="txtMobile" class="span2"/>
                <label>门店</label>
                <input type="text" id="txtStore" class="span2"/>
                 <label>开始日期</label>
                <input type="text" id="txtStartDate" class="span2" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <label>结束日期</label>
                <input type="text" id="txtEndDate" class="span2" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <button id="btnSerach" class="btn sepV_a">查询</button>
                <button id="export" class="btn sepV_a">导出</button>
            </div>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_CustomerLostRateTable">
    </table>
</div>


<div class="row-fluid sepV_b">
    <table class="table" data-provides="rowlink" id="dt_search">
        <thead>
            <tr>
                <th style="text-align: center; border-left: solid; border-left-width: 1px; border-right: solid; border-right-width: 1px; border-color: #ddd;" scope="col" colspan="7">进场台次类型</th>
                <th style="text-align: center; border-left: solid; border-left-width: 1px; border-right: solid; border-right-width: 1px; border-color: #ddd;" scope="col" colspan="7">维修收入统计</th>
                <th style="text-align: center; border-left: solid; border-left-width: 1px; border-right: solid; border-right-width: 1px; border-color: #ddd;" scope="col" colspan="7">客单价</th>
            </tr>
            <tr>
                <th scope="col">一般维修</th>
                <th scope="col">保养</th>
                <th scope="col">自采机油保养台次</th>
                <th scope="col">事故</th>
                <th scope="col">维修+保养</th>
                <th scope="col">其他</th>
                <th scope="col">合计</th>
                <th scope="col">一般维修</th>
                <th scope="col">保养</th>
                <th scope="col">自采机油保养台次</th>
                <th scope="col">事故</th>
                <th scope="col">维修+保养</th>
                <th scope="col">其他</th>
                <th scope="col">合计</th>
                <th scope="col">一般维修</th>
                <th scope="col">保养</th>
                <th scope="col">自采机油保养台次</th>
                <th scope="col">事故</th>
                <th scope="col">维修+保养</th>
                <th scope="col">其他</th>
                <th scope="col">合计</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

<form id="exportForm" method="post">    
    <input type="hidden" id="exportStartDate" name="exportStartDate" />
    <input type="hidden" id="exportEndDate" name="exportEndDate" />
    <input type="hidden" id="exportStore" name="exportStore" />
    <input type="hidden" id="exportMobile" name="exportMobile" />
</form>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Report/ServiceIncomeCount.js")
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/multi-select/js/jquery.multi-select.js", "~/Gebo/lib/multi-select/js/jquery.quicksearch.js", "~/Gebo/lib/chosen/chosen.jquery.min.js")
}
