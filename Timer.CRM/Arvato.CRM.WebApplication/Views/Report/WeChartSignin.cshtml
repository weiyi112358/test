@{
    ViewBag.Title = "二维码签到统计";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/VGebo/chosen.css")
    @System.Web.Optimization.Styles.Render("~/IXCSS/Common.css")
}
<div class="row-fluid heading">
    <div class="pull-left">
        <h3>二维码签到统计</h3>
    </div>
</div>
<div class="well">
    <div class="row-fluid">
        <div class="span3">
            <label>开始时间</label>
            <input type="text" class="span12" placeholder="开始时间" readonly="readonly" id="txtStartDate" readonly="readonly" style="cursor:pointer" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>结束时间</label>
            <input type="text" class="span12" placeholder="结束时间" readonly="readonly" id="txtEndDate" readonly="readonly" style="cursor:pointer" />
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <label>活动名称</label>
            <select class="chzn_a span12" id="drpactionname">
                <option value="">--请选择--</option>
                @foreach (var item in ViewBag.Actions)
                {
                    <option value="@item.ActionCode">@item.ActionName</option>
                }
            </select>
            @*<input type="text" class="span12" placeholder="活动名称" id="txtActName" />*@
            <span class="help-block"></span>
        </div>
        <div class="span3">
            <div class="pull-right">
                <label>&nbsp;</label>
                <button class="btn" id="btnSearch" type="button">查询</button>

            </div>
        </div>
    </div>

</div>



<div class="row-fluid sepV_b">
    <table class="table" data-provides="rowlink" id="dt_search">
        <thead>
            <tr>
                <th scope="col">活动名称</th>
                <th scope="col">签到日期</th>
                <th scope="col">发送次数</th>
                <th scope="col">本批次签到次数</th>
                <th scope="col">签到次数</th>
                <th scope="col">会员签到次数</th>
                <th scope="col">非会员签到次数</th>
                <th scope="col">签到率</th>
                <th scope="col">操作</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


<form id="exportForm" method="post">
    <input type="hidden" id="expractionCode" name="expractionCode" />
    <input type="hidden" id="exprdate" name="exprstartdate" />
    <input type="hidden" id="exprdate" name="exprenddate" />
</form>

<div class="hide">
    <div id="table_detail" class="cbox_content popComMedium" style="width:700px;height:480px;">
        <div class="modal-header">
            <h3>签到详情</h3>
        </div>
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmshowdetail" }))
        {
            <div class="modal-body">
                <table class="table" id="dt_detail"></table>
            </div>
        }
    </div>
</div>
<input type="hidden" id="hddate" value="">


@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/chosen/chosen.jquery.min.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/Report/WeChatSignin.js")

}