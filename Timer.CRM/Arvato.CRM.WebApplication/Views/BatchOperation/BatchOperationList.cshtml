@{
    ViewBag.Title = "Customize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    @System.Web.Optimization.Styles.Render("~/Scripts/Framework/webuploader-0.1.5/webuploader.css")
}
<div class="row-fluid heading">

    <div class="pull-left">
        <h3>卡批量操作列表</h3>
    </div>
</div>

<div class="sepH_c row-fluid">
    <div class="well firstShow ">
        <div class="row-fluid" id="queryCondition">
            <div class="span3">
                <label class="title-left sepV_a ml10">单号</label>
                <input type="text" id="SearchOddNumber" name="SearchOddNumber" class="span12"/>
            </div>
           <div class="span3">
                <label class="title-left sepV_a ml10">单据类型</label>
                <select class="span12 sepV_a input-medium" id="type">
                      <option value="">请选择</option>
                      <option value="0">开卡</option>
                      <option value="1">所属组织修改</option>
                     <option value="2">冻结</option>
                     <option value="3">解冻</option>
                    <option value="4">作废</option>
                  </select>      
            </div>
             <div class="span3">
                <label class="title-left sepV_a ml10">单据状态</label>
                <select   class="span12 sepV_a input-medium" id="Status">
                      <option value="">请选择</option>
                      <option value="0">未审核</option>
                      <option value="1">已审核</option>
                  </select>      
            </div>
            <div class="span3">
                <label class="title-left sepV_a ml10">最后修改人</label>
               <input type="text" id="ModifyUser" name="ModifyUser" class="span12"/>
            </div>
            <div class="span3">
                <label class="title-left sepV_a ml10">最后修改时间</label>
                <input type="text" class="input-medium length_b" id="ModifyTimeBegin"/>
                <em class="to">-</em>       
                <input type="text" class="input-medium length_b" id="ModifyTimeEnd"/>          
            </div>  
        </div>
        <div class="q_btn">
            <button class="btn btn-success" id="btnSerach">查询</button>
            <button class="btn" id="btnRemove">清除</button>
            <button  class="btn" id="btnAdd">新建</button>
            <button id="btnImport" class="btn" type="button">导入</button>
            <button id="btnDownLoad" class="btn" type="button">模板下载</button>
        </div>
    </div>
    <table class="table" data-provides="rowlink" id="dt_Table">
    </table>

    @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "form1", @class = "hide", @Action = "/BatchOperation/BatchOperationAdd" }))
{
        <input type="hidden" id="hideID" name="hideID"/>
         <input type="hidden" id="hideInfo" name="hideInfo"/>
}
</div>

<div class="hide">
   

    <div id="import_data" class="cbox_content popConfig">
        <div class="modal-header">
            <h3>文件导入</h3>
        </div>

        <div class="modal-body">
            <div>
                <form class="form_validation_import">
                    @*                        <div class="row-fluid">
                            <div class="span9">
                                <label>名称 <span class="f_req">*</span></label>
                                <input type="text" id="tbImportName" name="tbImportName" class="span12" />
                            </div>
                        </div>*@
                    <div class="row-fluid">
                        <div class="span9">
                            <label>文件路径 <span class="f_req">*</span></label>
                            <input type="text" id="tbFilePath" readonly="true" name="tbFilePath" class="span12" />
                        </div>
                        <div class="span2" id="container">
                            <label>&nbsp;</label>
                            <button type="button" class="btn btn-info" id="pickfiles">选择文件</button>
                        </div>
                    </div>
                    <div>
                        <span id="importError" class="error"></span>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-gebo confirm_yes" id="btnSaveImport">保存</button>
            <button class="btn confirm_no" id="btnCancelImport" type="button" onclick="$.colorbox.close()">取消</button>
        </div>
    </div>

    
</div>


@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/plupload/js/plupload.js", "~/Gebo/lib/plupload/js/plupload.gears.js", "~/Gebo/lib/plupload/js/plupload.silverlight.js", "~/Gebo/lib/plupload/js/plupload.flash.js", "~/Gebo/lib/plupload/js/plupload.browserplus.js", "~/Gebo/lib/plupload/js/plupload.html4.js", "~/Gebo/lib/plupload/js/plupload.html5.js")
    @System.Web.Optimization.Scripts.Render("~/Gebo/lib/validation/jquery.validate.js", "~/Scripts/Framework/jquery.validate.extend.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Framework/webuploader-0.1.5/webuploader.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/Pages/BatchOperation/BatchOperationList.js")
}