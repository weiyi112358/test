<!--更改角色弹窗页-->
<div class="hide">
    <div id="changeRole_dialog" class="cbox_content form-inline" style="width: 600px;">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmChangeRole" }))
