    <div id="changeBusi_dialog" class="cbox_content form-inline" style="width: 600px;">
        @using (Ajax.BeginForm(null, null, new AjaxOptions { }, new { id = "frmChangeBusi" }))
        {
            <div class="modal-header">
                <h3>分配业务部门</h3>
